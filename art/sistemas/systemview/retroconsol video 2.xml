<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
<view name="system">
<image name="logo">
<storyboard event="activate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<storyboard event="deactivate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<linearSmooth>true</linearSmooth>
<storyboard event="activate">
<animation property="scale" to="1.2" duration="1000" mode="easeOut" autoreverse="true" repeat="forever"/>
</storyboard>
</image>

<image name="background" extra="true">
<tile>false</tile>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/fondos/system 2.png</path>
<zIndex>30</zIndex>
</image>
  
<image name="predeterminado" extra="true">
<tile>false</tile>
<Delay>800</Delay>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/fondos/default.png</path>
<zIndex>11</zIndex>
<storyboard>
        <animation property="y" from="0.05" begin="0" duration="350" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="2950" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
      </storyboard>
</image>

<video name="backgroundvideo" extra="true">
<visible>true</visible>
<path>{random}</path>                    
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<delay>0</delay>
<showSnapshotNoVideo>false</showSnapshotNoVideo>
<showSnapshotDelay>false</showSnapshotDelay>
<color>FFFFFF</color>   
<zIndex>15</zIndex>
</video>
    
<video name="backgroundvideo" extra="true" ifHelpPrompts="false">
<pos>0.5 0.5</pos>
<minSize>1 1</minSize>
</video>
<image name="ControllerOverlay" extra="true">
<visible>false</visible>
</image>
<image name="CenterFade" extra="true">
<color>000000A0</color>
</image>    
 
<carousel name="systemcarousel">
<zIndex>43</zIndex>	      
<type>vertical</type>
<pos>0.357 0.02</pos>
<size>1 0.965</size>
<logoScale>1.15</logoScale>
<logoSize>0.150 0.260</logoSize>
<color>00000000</color>
<maxLogoCount>05</maxLogoCount>
<logoRotation>15</logoRotation>
<logoRotationOrigin>3.0 0.5</logoRotationOrigin>
<logoAlignment>center</logoAlignment>   
<zIndex>90</zIndex>  
</carousel>

<text name="systemInfo">
<systemInfoDelay>300</systemInfoDelay>
<pos>0.180  0.680</pos>
<size>0.420 0.35</size>
<fontSize>0.06</fontSize>
<fontPath>./art/sistemas/fuentes/Anticlimax.ttf</fontPath>
<backgroundColor>00000000</backgroundColor>
<color>ffffff</color>
<glowColor>000000</glowColor>
<glowSize>2</glowSize>
<reflexion>0.50 0.0</reflexion>
</text>
        
<helpsystem name="help">
<visible>false</visible>
<textColor>1C00ff00</textColor>
<iconColor>1C00ff00</iconColor>
<fontSize>0.020</fontSize>
<pos>0.50 0.03</pos>
</helpsystem>
       
<text name="sys_info" extra="true">
<visible>false</visible>
</text>
<text name="sys_description" extra="true">
<visible>false</visible>
</text>
    
<text name="logoText">
<fontPath>./art/sistemas/fuentes/bestfriends.ttf</fontPath>
<color>${baseColor}</color>
<forceUppercase>true</forceUppercase>
</text>
<image name="logo">
<path>./art/sistemas/silverring/${system.theme}.png</path>
<path>./${system.theme}/art/system-${lang}.png</path>
<path>./${system.theme}/art/system-${lang}.svg</path>
</image>
</view>
</theme>
