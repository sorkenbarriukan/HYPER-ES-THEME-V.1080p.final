<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
<include>../${system.theme}/wall.pngtheme.xml</include>
<view name="system">
<image name="logo">
<storyboard event="activate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<storyboard event="deactivate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<linearSmooth>true</linearSmooth>
<storyboard event="activate">
<animation property="scale" to="1.2" duration="1000" mode="easeOut" autoreverse="true" repeat="forever"/>
</storyboard>
</image>

<image name="background1" extra="true">
<tile>false</tile>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/fondos/ffs1.png</path>
<zIndex>20</zIndex>
</image>
  
<image name="background2" extra="true">
<tile>false</tile>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/fondos/ffs2.png</path>
<zIndex>40</zIndex>
</image>

<image name="background3" extra="true">
<tile>false</tile>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/wall/default.jpg</path>
<path>./art/sistemas/wall/${system.theme}.png</path>
<zIndex>10</zIndex>
</image>

<image name="predeterminado" extra="true">
<tile>false</tile>
<Delay>800</Delay>
<pos>0.8200 0.685</pos>
<origin>0.5 0.5</origin>
<size>0.3060 0.4160</size>
<path>./art/sistemas/fondos/default.png</path>
<zIndex>89</zIndex>
<storyboard>
        <animation property="y" from="0.05" begin="0" duration="350" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="2950" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
      </storyboard>
</image>

<video name="backgroundvideo" extra="true">
<visible>true</visible>
<path>{random}</path>  
<rotation>0</rotation>  
<roundCorners>0.04.9</roundCorners>             
<pos>0.8200 0.685</pos>
<origin>0.5 0.5</origin>
<size>0.3060 0.4160</size>
<delay>0</delay>
<showSnapshotNoVideo>false</showSnapshotNoVideo>
<showSnapshotDelay>false</showSnapshotDelay>
<color>FFFFFF</color>  
<storyboard> 
<animation property="x" from="1" begin="0" duration="2250" mode="easeOut"/>
</storyboard> 
<zIndex>90</zIndex>
</video>

<image name="ControllerOverlay" extra="true">
<tile>false</tile>
<pos>0.845 0.23</pos>
<origin>0.5 0.5</origin>
<size>0.175 0.175</size>
<path>./../splash.svg</path>
<path>./art/sistemas/controllers/${system.theme}.svg</path>
<path>./art/sistemas/controllers/${system.theme}.png</path>
<color>ffffff</color>
<storyboard>       
        <animation property="scale" from="0.9" to="1.0" begin="500" duration="1200" mode="easeInOut" autoreverse="true" repeat="forever"/>        
</storyboard>
<zIndex>90</zIndex>
</image>
 
<carousel name="systemcarousel">
<linearSmooth>true</linearSmooth>
		<defaultTransition>instant</defaultTransition>
        <type>horizontal</type>
        <rotation>-05</rotation>
        <pos>-0.365 0.390</pos>
        <size>1 1</size>
        <logoScale>1.15</logoScale>
        <logoSize>0.15 0.08</logoSize>
        <color>00000000</color>
        <maxLogoCount>1</maxLogoCount>
        <logoRotation>-3</logoRotation>
		<logoRotationOrigin>-5.0 0.5</logoRotationOrigin>
		<logoAlignment>center</logoAlignment>   
<zIndex>90</zIndex> 
</carousel>

