<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
  
<view name="system">
<image name="logo">
<storyboard event="activate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<storyboard event="deactivate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<linearSmooth>true</linearSmooth>
<storyboard event="activate">
<animation property="scale" to="1.2" duration="1000" mode="easeOut" autoreverse="true" repeat="forever"/>
</storyboard>
</image>

<carousel name="systemcarousel">
<zIndex>43</zIndex>	      
<type>vertical_wheel</type>
<pos>0.344 0</pos>
<size>1 1</size>
<logoScale>1.05</logoScale>
<logoSize>0.130 0.260</logoSize>
<color>00000000</color>
<maxLogoCount>30</maxLogoCount>
<logoRotation>8</logoRotation>
<logoRotationOrigin>3.50 0.5</logoRotationOrigin>
<logoAlignment>center</logoAlignment>       
</carousel>

<text name="systemInfo">
<glowColor>000000</glowColor>
<pos>0.085 0.889</pos>
<backgroundColor>00000000</backgroundColor>
<color>ffffff</color>
<reflexion>0.50 0.0</reflexion>
<rotation>0</rotation> 
<fontPath>./art/sistemas/fuentes/Pixel LCD-7.ttf</fontPath>
<fontSize>0.040</fontSize>
<zIndex>999</zIndex>
<storyboard repeat="0">
<animation property="opacity" from="0" to="1" begin="0" duration="350" mode="linear"/>
<animation property="rotation" from="-13" to="13" duration="100" autoreverse="true" begin="4000" repeat="3"/>
</storyboard>
</text> 

<image name="background" extra="true">
<visible>true</visible>
<tile>false</tile>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/fondos/fondo simple halo.png</path>
<zIndex>32</zIndex>
</image>

<image name="background3" extra="true">
<visible>true</visible>
<tile>false</tile>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/wall/default.png</path>
<path>./art/sistemas/wall/${system.theme}.png</path>
<zIndex>10</zIndex>
</image>
    
<image name="pointer" extra="true">
<tile>false</tile>
<pos>0.973 0.50</pos>
<origin>0.5 0.5</origin>
<maxSize>0.075 0.175</maxSize>
<path>./art/sistemas/pointer/default.png</path>
<path>./art/sistemas/pointer/${system.theme}.png</path>
<zIndex>90</zIndex> 
<storyboard repeat="forever">
<animation property="x" from="0.963" to="0.940" duration="60" autoreverse="true" begin="4000" repeat="3"/>
</storyboard>
</image>
     
<video name="backgroundvideo" extra="true">
<path>{random}</path>
<path>./art/sistemas/videos/${system.theme}.mp4</path>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<delay>1</delay>
<color>FFFFFF</color>
<effect>none</effect>
<zIndex>31</zIndex>
</video>

<image name="personaje" extra="true">
