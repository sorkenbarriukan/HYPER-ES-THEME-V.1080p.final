<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <view name="system">
<image name="logo">
<storyboard event="activate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<storyboard event="deactivate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<linearSmooth>true</linearSmooth>
<storyboard event="activate">
<animation property="scale" to="1.2" duration="1000" mode="easeOut" autoreverse="true" repeat="forever"/>
</storyboard>
</image>

<image name="background" extra="true">
<color>000000FF</color>
</image>

<image name="predeterminado" extra="true">
<tile>false</tile>
<Delay>800</Delay>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/fondos/default.png</path>
<zIndex>10</zIndex>
<storyboard>
        <animation property="y" from="0.05" begin="0" duration="350" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="2950" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
      </storyboard>
</image>

<video name="backgroundvideo" extra="true">
<path>{random}</path>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<delay>0</delay>
<color>FFFFFF</color>
<effect>none</effect>
<zIndex>25</zIndex>
</video>
<video name="backgroundvideo" extra="true" ifHelpPrompts="false">
<pos>0.5 0.5</pos>
<minSize>1 1</minSize>
</video>
<image name="ControllerOverlay" extra="true">
<visible>false</visible>
</image>
<image name="CenterFade" extra="true">
<color>000000A0</color>
</image>    
  
<carousel name="systemcarousel">
<color>1C00ff00</color>
<colorEnd>1C00ff00</colorEnd>
<systemInfoDelay>700</systemInfoDelay>
<logoScale>1.15</logoScale>
<pos>0 0.3837</pos>
<size>1 0.2625</size>
</carousel>
<image name="carousel-inner" extra="true">
<path>./art/carousel2.png</path>
<color>FFFFFFFF</color>
<origin>0 0</origin>
<pos>0 0.4000</pos>
<size>1 0.2325</size>
<zIndex>30</zIndex>
</image>
   
<text name="systemInfo">
<systemInfoDelay>300</systemInfoDelay>
<pos>0.410  0.705</pos>
<size>0.220 0.45</size>
<backgroundColor>1C00ff00</backgroundColor>
<color>bbb3a8</color>
<glowColor>000000</glowColor>
<glowSize>2</glowSize>
<reflexion>0.50 0.0</reflexion>
</text>
    
<image name="personaje" extra="true">
<path>./art/sistemas/character/default.png</path>
<path>./art/sistemas/character/${system.theme}.png</path>
<color>FFFFFFFF</color>
<origin>0 0</origin>
<pos>0.680 0.2900</pos>
<size>0.2095 0.7055</size>
<glowColor>000000</glowColor>
<glowSize>2</glowSize>
<reflexion>0.50 0.0</reflexion>
<zIndex>62</zIndex>
</image>

<image name="personaje2" extra="true">
<path>./art/sistemas/character/default.png</path>
<path>./art/sistemas/character/${system.theme}.png</path>
<color>2EFE2E</color>
<origin>0 0</origin>
<pos>0.680 0.2900</pos>
<size>0.2095 0.7055</size>
<glowColor>ffffff60</glowColor>
<glowSize>2</glowSize>
<reflexion>0.50 0.0</reflexion>
<zIndex>60</zIndex>
</image>

<image name="personaje3" extra="true">
<path>./art/sistemas/character/default.png</path>
<path>./art/sistemas/character/${system.theme}.png</path>
<color>FE2EF7</color>
<origin>0 0</origin>
<pos>0.680 0.2900</pos>
<size>0.2095 0.7055</size>
<glowColor>ffffff60</glowColor>
<glowSize>2</glowSize>
<reflexion>0.50 0.0</reflexion>
<zIndex>61</zIndex>
</image>

<helpsystem name="help">
<visible>false</visible>
<textColor>1C00ff00</textColor>
<iconColor>1C00ff00</iconColor>
<fontSize>0.020</fontSize>
<pos>0.50 0.03</pos>
</helpsystem>

<image name="pointer" extra="true">
<visible>false</visible>
</image>
<image name="pointerl" extra="true">
<visible>false</visible>
</image>
       
<text name="sys_info" extra="true">
<visible>false</visible>
</text>
<text name="sys_description" extra="true">
<visible>false</visible>
</text>
    
<text name="logoText">
<fontPath>./art/sistemas/fuentes/bestfriends.ttf</fontPath>
<color>${baseColor}</color>
<forceUppercase>true</forceUppercase>
</text>
<image name="logo">
<path>./art/sistemas/silverring/${system.theme}.png</path>
<path>./${system.theme}/art/system-${lang}.png</path>
<path>./${system.theme}/art/system-${lang}.svg</path>
</image>
</view>
</theme>
