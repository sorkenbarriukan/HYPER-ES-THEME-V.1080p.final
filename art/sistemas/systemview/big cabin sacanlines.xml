<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>  
<view name="system">
<image name="logo">
<storyboard event="activate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<storyboard event="deactivate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<linearSmooth>true</linearSmooth>
<storyboard event="activate">
<animation property="scale" to="1.2" duration="1000" mode="easeOut" autoreverse="true" repeat="forever"/>
</storyboard>
</image>

<image name="background" extra="true">
<tile>false</tile>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/fondos/cabin bigscanline.png</path>
<zIndex>20</zIndex>
</image>

<image name="pointerl" extra="true">
<visible>false</visible>
</image>
    
<image name="pointer" extra="true">
<tile>false</tile>
<pos>0.963 0.50</pos>
<origin>0.5 0.5</origin>
<size>0.075 0.175</size>
<path>./art/sistemas/pointer/default.png</path>
<path>./art/sistemas/pointer/${system.theme}.png</path>
<zIndex>60</zIndex>
<storyboard repeat="forever">
<animation property="x" from="0.963" to="0.940" duration="60" autoreverse="true" begin="4000" repeat="3"/>
</storyboard>
</image>
    
<image name="background3" extra="true">
<tile>false</tile>
