<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <view name="system">
<image name="logo">
<storyboard event="activate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<storyboard event="deactivate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<linearSmooth>true</linearSmooth>
<storyboard event="activate">
<animation property="scale" to="1.2" duration="1000" mode="easeOut" autoreverse="true" repeat="forever"/>
</storyboard>
</image>

<image name="background" extra="true">
<tile>false</tile>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/fondos/horizontal&cabin&Scanline.png</path>
<zIndex>30</zIndex>
</image>
  
<image name="background3" extra="true">
<tile>false</tile>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/wall/default.png</path>
<path>./art/sistemas/wall/${system.theme}.png</path>
<zIndex>10</zIndex>
</image>

<image name="logobatocera" extra="true">
<path>./art/sistemas/fondos/batocera-logo.png</path>
<color>FFFFFFFF</color>
<origin>0 0</origin>
<pos>0.8850 0.8767</pos>
<size>0.06 0.12</size>
 <storyboard>
        <animation property="rotation" from="0" to="360" duration="4000" mode="linear" repeat="forever"/>
      </storyboard>
<zIndex>60</zIndex>
</image>
    
<image name="personaje" extra="true">
<path>./art/sistemas/character/default.png</path>
<path>./art/sistemas/character/${system.theme}.png</path>
<color>FFFFFFFF</color>
<reflexion>0.29 0.0</reflexion>
<origin>0 0</origin>
<pos>0.5250 0.2567</pos>
<size>0.2595 0.7455</size>
<storyboard> 
<animation property="x" from="1.01" begin="0" duration="2250" mode="easeOut"/>
<animation property="opacity" from="0" to="1" duration="1350" mode="easeIn"/>
<animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
<animation property="scale" from="0.9" to="1.0" begin="500" duration="1200" mode="easeInOut" autoreverse="true" repeat="forever"/>
</storyboard>
<zIndex>60</zIndex>
</image>

<image name="predeterminado" extra="true">
<tile>false</tile>
<Delay>800</Delay>
<pos>0.1546 0.761</pos>
<origin>0.5 0.5</origin>
<size>0.1800 0.325</size>
<path>./art/sistemas/fondos/default.png</path>
<zIndex>11</zIndex>
<storyboard>
        <animation property="y" from="0.05" begin="0" duration="350" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="2950" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
      </storyboard>
</image>

<video name="backgroundvideo" extra="true">
<visible>true</visible>
<path>{random}</path>                    
<pos>0.1546 0.761</pos>
<origin>0.5 0.5</origin>
<size>0.1800 0.325</size>
<delay>0</delay>
<showSnapshotNoVideo>false</showSnapshotNoVideo>
<showSnapshotDelay>false</showSnapshotDelay>
<color>FFFFFF</color>   
<zIndex>15</zIndex>
</video>

<image name="ControllerOverlay" extra="true">
<visible>false</visible>
</image>
<image name="CenterFade" extra="true">
<color>000000A0</color>
</image>    
  
  <image name="logo">
<storyboard event="activate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<storyboard event="deactivate">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
</storyboard>
<linearSmooth>true</linearSmooth>
<storyboard event="activate" repeatAt="1">
<animation property="opacity" to="1" begin="0" duration="0" mode="linear"/>
<animation property="scale" from="1.50" to="1.08" begin="0" duration="1000" mode="easeOut" autoreverse="true"/>
<animation property="scale" from="1.05" to="1" begin="1000" duration="1000" mode="easeOut"/>
</storyboard>
</image>

<carousel name="systemcarousel">
<color>00000000</color>
<colorEnd>00000000</colorEnd>
<systemInfoDelay>300</systemInfoDelay>
<pos>0 0.0107</pos>
<size>1 0.2325</size>
<logoScale>1.05</logoScale>
<maxLogoCount>4</maxLogoCount>
</carousel>
    
<text name="systemInfo">
<systemInfoDelay>300</systemInfoDelay>
<pos>-0.055  0.348</pos>
<size>0.420 0.35</size>
<fontSize>0.05.6</fontSize>
<fontPath>./art/sistemas/fuentes/Anticlimax.ttf</fontPath>
<backgroundColor>00000000</backgroundColor>
<color>000000</color>
<glowColor>1C00ff00</glowColor>
<glowSize>0</glowSize>
<reflexion>0.0 0.0</reflexion>
<zIndex>60</zIndex>
</text>

<image name="pointer" extra="true">
<visible>false</visible>
</image>
<image name="pointerl" extra="true">
<visible>false</visible>
</image>
    
<helpsystem name="help">
<visible>false</visible>
<textColor>1C00ff00</textColor>
<iconColor>1C00ff00</iconColor>
<fontSize>0.020</fontSize>
<pos>0.50 0.03</pos>
</helpsystem>
        
<text name="sys_info" extra="true">
<visible>false</visible>
</text>
<text name="sys_description" extra="true">
<visible>false</visible>
</text>
   
<text name="logoText">
<fontPath>./art/sistemas/fuentes/bestfriends.ttf</fontPath>
<color>${baseColor}</color>
<forceUppercase>true</forceUppercase>
</text>
<image name="logo">
<path>./art/sistemas/ticket/${system.theme}.png</path>
<path>./${system.theme}/art/system-${lang}.png</path>
<path>./${system.theme}/art/system-${lang}.svg</path>
</image>
</view>
</theme>
