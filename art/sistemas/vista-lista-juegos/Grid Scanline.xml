<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
<customView name="(1)-Grid Scanline" inherits="grid" displayName="${carouselDetailsViewName}">
<image name="background">
<tile>false</tile>
<pos>0 0</pos>
<origin>0 0</origin>
<size>1 1</size>
<path>./art/sistemas/fondos/grid scanline.png</path>
<zIndex>20</zIndex>
</image>
    
<image name="background3" extra="true">
<tile>false</tile>
<color>FFFFFF</color>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/sistemas/wall/default.png</path>
<path>./art/sistemas/wall/${system.theme}.png</path>
</image>
    
<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
<color>A0A0B000</color>
</text>
<text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
<color>ffffff00</color>
</text>
<datetime name="md_releasedate, md_lastplayed">
<color>ffffff00</color>
</datetime>
  
<imagegrid name="gamegrid">
<pos>0.025 0.16</pos>
<size>0.950 0.774</size>
<margin>0.005 0.040</margin>
<padding>0.03 0.05 0.03 0.04</padding>
<autoLayout>5 2</autoLayout>
<imageSource>thumbnail</imageSource>
<autoLayoutSelectedZoom>1.12</autoLayoutSelectedZoom>
<animateSelection>false</animateSelection>
<folderImage>./art/sistemas/fondos/deffolder.png</folderImage>
<gameImage>./art/sistemas/fondos/defgamegrid.png</gameImage>
</imagegrid>

<gridtile name="default">
<padding>50 16</padding>
<backgroundCenterColor>00000060</backgroundCenterColor>
<backgroundEdgeColor>FFFFFF70</backgroundEdgeColor>
<imageSizeMode>maxSize</imageSizeMode>
<imageColor>FFFFFF</imageColor>
<reflexion>0.19 0.0</reflexion>
</gridtile>
<gridtile name="selected">
<backgroundCenterColor>FFFFFF50</backgroundCenterColor>
<backgroundEdgeColor>FFFFFF</backgroundEdgeColor>
<padding>64 16</padding>
</gridtile>
<text name="gridtile">
<color>D0D0D0</color>
<backgroundColor>00000000</backgroundColor>
<fontSize>0.022</fontSize>
<alignment>center</alignment>
<size>1 0.24</size>
</text>
<text name="gridtile_selected">
<color>FFFFFF</color>
<glowColor>${glowColor}</glowColor>
<glowSize>3</glowSize>
</text>
    
<image name="gridtile.favorite">
<path>./art/gridfav.png</path>
<pos>0.75 0</pos>
<maxSize>0.25 0.25</maxSize>
<origin>0 0</origin>
<color>A0A0A0A0</color>
</image>   
    
<helpsystem name="help">
<textColor>00000000</textColor>
<iconColor>00000000</iconColor>
<fontSize>0.020</fontSize>
<pos>0.05 0.97</pos>
</helpsystem>
 
 <video name="md_video">
<pos>0.1592 0.7690</pos>
<origin>0.5 0.5</origin>
<size>0.01 0.01</size>
<delay>0</delay>
<roundCorners>0.04.7</roundCorners> 
<showSnapshotNoVideo>false</showSnapshotNoVideo>
<showSnapshotDelay>false</showSnapshotDelay>
<loops>0</loops>
<zIndex>1</zIndex>
</video>
  
<image name="md_marquee">
<pos>0.500 0.136</pos>
<size>0.150 0.099</size>
<origin>0.5 0.5</origin>
<zIndex>90</zIndex>
</image>	
 
<text name="logoText">
<pos>0.500 0.136</pos>
<size>0.150 0.099</size>
<origin>0.5 0.5</origin>
<alignment>center</alignment>
<fontSize>0.08</fontSize>
<fontPath>./art/sistemas/fuentes/Bebas Neue.ttf</fontPath>
<color>00000000</color>
</text>
<image name="logo">
<pos>0.500 0.136</pos>
<size>0.150 0.099</size>
<origin>0.5 0.5</origin>
</image>

<image name="md_flag"> 
<visible>true</visible>
<origin>0.5 0.5</origin>
<pos>0.0190 0.950</pos>
<maxSize>0.025 0.018</maxSize>
<zIndex>200</zIndex>
<storyboard repeat="forever">
<animation property="rotation" from="-13" to="13" duration="100" autoreverse="true" begin="6000" repeat="3"/>
</storyboard>  
</image>

<rating name="md_rating">
<pos>0.06 0.06</pos>
<size>0.150 0.099</size>
<color>FFFFFF</color>
<unfilledColor>808080</unfilledColor>
</rating>
</customView>
</theme>
